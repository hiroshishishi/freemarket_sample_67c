.bodyUser 
  = render 'items/header'
  .user-main
    = render 'user/my_left'
    .my-right
      %section.my-card
        %h2.my-card__head クレジットカード情報入力
        = form_tag( method: :post, id: 'charge-form',  name: "inputForm") do
          .card-main
            .card-main__form
              .card-main__form__part
                %label カード番号
                %span.hissu 必須
                = text_field_tag "number", "", class: "number", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
                %br
                %ul.credit-mark
                  %li.credit-mark__each
                    = image_tag"card/visa.svg",size: "40x20"
                  %li.credit-mark__each
                    = image_tag"card/master-card.svg",size: "40x20"
                  %li.credit-mark__each
                    = image_tag"card/saison-card.svg",size: "40x20"
                  %li.credit-mark__each
                    = image_tag"card/american_express.svg",size: "40x20"
                  %li.credit-mark__each
                    = image_tag"card/dinersclub.svg",size: "40x20"
                  %li.credit-mark__each
                    = image_tag"card/discover.svg",size: "40x20"
              .card-main__form__part
                %label 有効期限
                %span.hissu 必須
                .credit-form
                  %select#exp_month{name: "exp_month"}
                    %option{value: ""}
                    %option{value: "1"}01
                    %option{value: "2"}02
                    %option{value: "3"}03
                    %option{value: "4"}04
                    %option{value: "5"}05
                    %option{value: "6"}06
                    %option{value: "7"}07
                    %option{value: "8"}08
                    %option{value: "9"}09
                    %option{value: "10"}10
                    %option{value: "11"}11
                    %option{value: "12"}12
                  %i.fas.fa-angle-down
                %span 月
                .credit-form
                  %select#exp_year{name: "exp_year"}
                    %option{value: ""}
                    %option{value: "2020"}20
                    %option{value: "2021"}21
                    %option{value: "2022"}22
                    %option{value: "2023"}23
                    %option{value: "2024"}24
                    %option{value: "2025"}25
                    %option{value: "2026"}26
                    %option{value: "2027"}27
                    %option{value: "2028"}28
                    %option{value: "2029"}29
                  %i.fas.fa-angle-down
                %span 年
                %br
              .card-main__form__part
                %label セキュリティコード
                %span.hissu 必須
                = text_field_tag "cvc", "", class: "cvc", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
                .signup-number
                  .signup-number__text
                    %span.number-question ?
                    #text カード裏面の番号とは?
                #card_token
              %button.card-main__form__button
                = submit_tag "追加する", id: "token_submit"
  = render 'items/footer'