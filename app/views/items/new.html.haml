.bodyNew
  .container
    = render "subHeader"
    .main
      .buy-item-container
        .inner
          %h1.inner__title 商品の情報を入力
          .form
            = form_with(model:@items, local:true) do |f|
              .upload-box
                .title
                  出品画像
                  %span> 必須
                %p 最大10枚までアップロードできます
                .dropbox
                  .preview-content
                  .label-content
                    %label{for: "item_images_attributes_0_image", class: "label-box", id: "label-box--0"}
                      %pre.label-box__text クリックしてファイルをアップロード
                  .hidden-content
                    = f.fields_for :images do |i|
                      = i.file_field :src, id: "item_images_attributes_0_image",  class: 'hidden-field'
                      %input{class:"hidden-field", type: "file", name: "item[images_attributes][1][image]", id: "item_images_attributes_1_image" }
                      %input{class:"hidden-field", type: "file", name: "item[images_attributes][2][image]", id: "item_images_attributes_2_image" }
                      %input{class:"hidden-field", type: "file", name: "item[images_attributes][3][image]", id: "item_images_attributes_3_image" }
                      %input{class:"hidden-field", type: "file", name: "item[images_attributes][4][image]", id: "item_images_attributes_4_image" }
                    -#   .dropbox.clearfix
                    -#     .js-file_group{"data-index" => "#{i.index}"}
                    -#     - if @item.persisted?
                    -#       = i.check_box :_destroy, data:{ index: i.index }, class: 'hidden-destroy'
                    -# - if @item.persisted?
                    -#   .js-file_group{"data-index" => "#{@item.images.count}"}
                    -#     = file_field_tag :src, name: "item[images_attributes][#{@item.images.count}][src]", class: 'js-file'
                    -#     .js-remove 削除
              .free-content
                .free-content__title
                  商品名
                  %span> 必須
                %div
                = f.text_field :name, placeholder:"商品名（必須 40文字まで)", class:"free-content__form"
                .free-content__explain
                  商品の説明
                  %span> 必須
                %div
                = f.text_area :text, placeholder:"商品の説明（必須 1,000文字以内）（色、素材、重さ、定価、注意点など）例）\r\n2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。", class:"free-content__formCategory"
              .content-sell.clearfix
                %h3.content-sell__head 商品の詳細
                .content-sell__formbox
                  .content-sell__formbox__category
                    %label カテゴリー
                    %span> 必須
                    %div
                    .content-sell__formbox__category__select__child
                      = f.select :category, @category_parent_array, {}, {class: "content-sell__formbox__category__select__form", id: 'parent_category'}
                      %i.content-sell__formbox__category__select__btn
                        =icon('fa', 'chevron-down')
                  .content-sell__formbox__status
                    %label 商品の状態
                    %span> 必須
                    %div
                    .content-sell__formbox__status__select
                      %i.content-sell__formbox__status__select__btn
                        =icon('fa', 'chevron-down')
                      = f.select :condition, Item.conditions.keys, {}, {class:"content-sell__formbox__status__select__form"}
              .content-sell.clearfix
                %h3.content-sell__head 配送について
                %a.content-sell__question{href: "#", target: "_blank"} ?
                .content-sell__formbox
                  .content-sell__formbox__group
                    %label 配送料の負担
                    %span> 必須
                    %div
                    .content-sell__formbox__group__select
                      %i.content-sell__formbox__group__select__btn
                        =icon('fa', 'chevron-down')
                      = f.select :fee, Item.fees.keys, {}, {class:"content-sell__formbox__group__select__form"}
                  .content-sell__formbox__status
                    %label 発送元の地域
                    %span> 必須
                    %div
                    .content-sell__formbox__status__select
                      %i.content-sell__formbox__status__select__btn
                        =icon('fa', 'chevron-down')
                      = f.collection_select :prefecture_id, Prefecture.all, :id, :name, {}, {class: 'content-sell__formbox__status__select__form'}
                  .content-sell__formbox__status
                    %label 発送までの日数
                    %span> 必須
                    %div
                    .content-sell__formbox__status__select
                      %i.content-sell__formbox__status__select__btn
                        =icon('fa', 'chevron-down')
                      = f.select :delivery_day, Item.delivery_days.keys, {}, {class:"content-sell__formbox__status__select__form"}
              .content-sell.clearfix
                %h3.content-sell__head 販売価格(300〜9,999,999)
                %a.content-sell__question{href: "#", target: "_blank"} ?
                .content-sell__formbox
                  %ul
                    %li.content-sell__formbox__group
                      .clearfix
                        .labelBox
                          %label 価格
                          %span> 必須
                        .content-sell__formbox__group__input
                          .content-sell__formbox__group__input__icon ¥
                          %input.content-sell__formbox__group__input__box{placeholder: "例) 300"}
                    %li.content-sell__formbox__tax
                      .content-sell__formbox__tax__left 販売手数料(10%)
                      .content-sell__formbox__tax__right -
                    %li.content-sell__formbox__benefit
                      .content-sell__formbox__benefit__left 販売利益
                      .content-sell__formbox__benefit__right -
              .content-sell.clearfix
                %h3.content-sell__warning
                  %p
                    %a{href: "#", target: "_blank"} 禁止されている出品
                    、
                    %a{href: "#", target: "_blank"} 行為
                    を必ずご確認ください。
                  %p
                    またブランド品でシリアルナンバー等がある場合はご記載ください。
                    %a{href: "#", target: "_blank"}偽ブランドの販売
                    は犯罪であり処罰される可能性があります。
                  %p 
                    また、出品をもちまして
                    %a{href: "#", target: "_blank"}加盟店規約
                    に同意したことになります。
                %button.content-sell__red-btn{type: "submit"} 出品する
                %a.content-sell__gray-btn もどる
    = render "subFooter"